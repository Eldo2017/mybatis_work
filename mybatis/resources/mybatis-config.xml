<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

  <!-- setting : mybatis 구동시 선언할 설정들을 작성한다 -->
  <!-- settings문 사이에 주석 달지 마삼 -->
  <!-- 만약 null로 데이터가 전달되었다면 빈칸이 아닌 null로 인식하고 설정한다 -->
  <settings>
	  <setting name="jdbcTypeForNull" value="NULL"/>
  </settings>
  <!-- typeAlias : servlet 또는 bean 클래스들의 풀클래스명을 단순한 클래스명으로 부리기 위해 별칭을 등록한다 -->
  
  <!-- mybatis에서 연동할 db 정보들을 등록한다 -->
  <environments default="development">
    <environment id="development">
    <!-- environment문에는 사이에 주석 넣어도 무관하다 -->
    <!-- 
      * transactionManager type
    	 JDBC : 트랜잭션을 내가 직접 관리한다(수동 commit)
    	 MANAGED : 트랜잭션에 어떤 영향도 행사하지 않는다(자동 commit)
    	 
      * dataSource type
         POOLED : ConnectionPool을 사용한다
         UNPOOLED : ConnectionPool을 사용하지 않는다
     -->
      <transactionManager type="JDBC"/>
      <dataSource type="POOLED">
        <property name="driver" value="oracle.jdbc.OracleDriver"/>
        <property name="url" value="jdbc:oracle:thin:@localhost:1521:free"/>
        <property name="username" value="myBatis_PlayMaker"/>
        <property name="password" value="1234"/>
      </dataSource>
    </environment>
  </environments>
  <!-- 실행할 sql문들을 기록해둔 mapper 파일들을 등록한다 -->
  <mappers>
    <mapper resource="/mappers/member-mapper.xml"/>
  </mappers>
</configuration>